{
	"name": "backend",
	"version": "1.0.0",
	"description": "Backend for MigrateMeTo and communication with various services",
	"main": "./src/index.ts",
	"scripts": {
		"build": "tsc",
		"postinstall": "npm run build",
		"start": "cross-env NODE_ENV=production node dist/index.js",
		"dev": "cross-env NODE_ENV=development nodemon ./src/index.ts",
		"test": "cross-env NODE_ENV=testing jest --verbose",
		"mock:server": "ts-node ./mock-server/index.ts",
		"mock:server:dev": "nodemon ./mock-server/index.ts"
	},
	"author": "Al Jibran",
	"license": "ISC",
	"dependencies": {
		"axios": "^0.26.0",
		"cors": "^2.8.5",
		"dotenv": "^16.0.0",
		"express": "^4.17.3"
	},
	"devDependencies": {
		"@types/cors": "^2.8.12",
		"@types/crypto-js": "^4.1.1",
		"@types/express": "^4.17.13",
		"@types/jest": "^27.4.0",
		"@types/node": "^17.0.18",
		"@types/supertest": "^2.0.11",
		"cross-env": "^7.0.3",
		"jest": "^27.5.1",
		"nodemon": "^2.0.15",
		"supertest": "^6.2.2",
		"ts-jest": "^27.1.3",
		"typescript": "^4.5.5"
	}
}
